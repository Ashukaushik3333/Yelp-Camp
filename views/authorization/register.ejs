<%- include('../partials/header') %>

<div class="container">
	<h1 class="text-center">Sign up to Yelp Camps</h1><br>
	<form action="/register" method="POST" style="width: 30%;" class="mx-auto">
		<div class="form-group">
			<label for="nameCampground">Username</label>
			<input type="text" class="form-control"  name='username' placeholder="Username">
		</div>
		<div class="form-group">
			<label for="nameCampground">Password</label>
			<input type="password" class="form-control" name='password' placeholder="Password">
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-success btn-block">Sign Up</button>
		</div>
		<h4><a href="/login" class="badge badge-primary btn-block">Log in to Yelp Camp</a></h4>
	</form>
</div>

<%- include('../partials/footer') %>